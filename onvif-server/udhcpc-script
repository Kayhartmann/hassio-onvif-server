#!/bin/sh
# udhcpc hook script for ONVIF MacVLAN interfaces

mask2cidr() {
    local mask="${1}" bits=0
    local IFS='.'
    for octet in $mask; do
        case "$octet" in
            255) bits=$((bits+8)) ;;
            254) bits=$((bits+7)) ;;
            252) bits=$((bits+6)) ;;
            248) bits=$((bits+5)) ;;
            240) bits=$((bits+4)) ;;
            224) bits=$((bits+3)) ;;
            192) bits=$((bits+2)) ;;
            128) bits=$((bits+1)) ;;
        esac
    done
    echo "$bits"
}

case "$1" in
    bound|renew)
        ip addr flush dev "${interface}" 2>/dev/null || true
        CIDR=$(mask2cidr "${subnet:-255.255.255.0}")
        ip addr add "${ip}/${CIDR}" dev "${interface}"
        if [ -n "${router}" ]; then
            ip route add default via "${router}" dev "${interface}" 2>/dev/null || true
        fi
        echo "[udhcpc] ${interface}: bound ${ip}/${CIDR} gw=${router:-none}"
        ;;
    deconfig)
        ip addr flush dev "${interface}" 2>/dev/null || true
        ;;
    leasefail|nak)
        echo "[udhcpc] ${interface}: DHCP lease failed ($1)" >&2
        ;;
esac
exit 0
